<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Interactive Feedback & Review Form</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Outfit', sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #4158D0;
            background: linear-gradient(45deg, #4158D0, #C850C0, #FFCC70);
            padding: 20px;
            overflow-x: hidden;
        }

        .container {
            width: 100%;
            max-width: 600px;
            position: relative;
            height: 650px;
        }

        .card {
            position: absolute;
            width: 100%;
            height: 100%;
            transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
            border-radius: 30px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            overflow: hidden;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 10px;
            background: linear-gradient(90deg, #4158D0, #C850C0);
        }

        .card.hidden {
            transform: translateX(100vw) rotate(10deg);
            opacity: 0;
            pointer-events: none;
        }

        .rating-group {
            margin: 20px 0;
        }

        .stars {
            display: inline-flex;
            gap: 5px;
            padding: 10px 0;
        }

        .star {
            font-size: 30px;
            cursor: pointer;
            color: #ddd;
            transition: color 0.2s;
        }

        .star.active {
            color: #FFD700;
        }

        .star:hover {
            transform: scale(1.1);
        }

        .rating-label {
            display: block;
            margin-bottom: 5px;
            color: #666;
            font-weight: 500;
        }

        .emotion-picker {
            display: flex;
            justify-content: space-around;
            margin: 20px 0;
        }

        .emotion {
            font-size: 2em;
            cursor: pointer;
            transition: transform 0.2s;
            opacity: 0.5;
        }

        .emotion.selected {
            transform: scale(1.2);
            opacity: 1;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        label {
            display: block;
            color: #666;
            margin-bottom: 8px;
            font-weight: 500;
        }

        input, textarea {
            width: 100%;
            padding: 15px;
            border: 2px solid transparent;
            background: rgba(65, 88, 208, 0.05);
            border-radius: 15px;
            font-size: 1em;
            color: #333;
            transition: all 0.3s ease;
        }

        input:focus, textarea:focus {
            outline: none;
            border-color: #4158D0;
            background: white;
            box-shadow: 0 5px 15px rgba(65, 88, 208, 0.1);
        }

        .next-btn {
            background: linear-gradient(45deg, #4158D0, #C850C0);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 25px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

        .next-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(65, 88, 208, 0.3);
        }

        .card.thank-you {
            transform: translateX(100vw);
            opacity: 0;
            pointer-events: none;
            background: linear-gradient(135deg, #4158D0, #C850C0);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .card.thank-you.show {
            transform: translateX(0);
            opacity: 1;
            pointer-events: all;
        }

        .thank-you-icon {
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            animation: bounce 1s ease infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .thank-you-icon::before {
            content: '‚úì';
            font-size: 50px;
            color: white;
        }

        .progress-bar {
            position: absolute;
            top: 10px;
            right: 40px;
            display: flex;
            gap: 5px;
        }

        .progress-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: rgba(65, 88, 208, 0.2);
            transition: all 0.3s ease;
        }

        .progress-dot.active {
            background: #4158D0;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Card 1: Personal Info -->
        <div class="card" id="card1">
            <div class="progress-bar">
                <div class="progress-dot active"></div>
                <div class="progress-dot"></div>
                <div class="progress-dot"></div>
            </div>
            <h1>Tell us about yourself!</h1>
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" placeholder="Type your name...">
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" placeholder="Enter your email...">
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" placeholder="Your phone number...">
            </div>
            <button class="next-btn" onclick="nextCard(1)">Continue ‚Üí</button>
        </div>

        <!-- Card 2: Review -->
        <div class="card hidden" id="card2">
            <div class="progress-bar">
                <div class="progress-dot"></div>
                <div class="progress-dot active"></div>
                <div class="progress-dot"></div>
            </div>
            <h1>Rate your experience</h1>
            <div class="rating-group">
                <span class="rating-label">Overall Experience</span>
                <div class="stars" id="experience-stars">
                    <span class="star" onclick="rate(this, 1)">‚òÖ</span>
                    <span class="star" onclick="rate(this, 2)">‚òÖ</span>
                    <span class="star" onclick="rate(this, 3)">‚òÖ</span>
                    <span class="star" onclick="rate(this, 4)">‚òÖ</span>
                    <span class="star" onclick="rate(this, 5)">‚òÖ</span>
                </div>
            </div>
            <div class="rating-group">
                <span class="rating-label">How satisfied are you?</span>
                <div class="emotion-picker">
                    <span class="emotion" onclick="selectEmotion(this)">üòû</span>
                    <span class="emotion" onclick="selectEmotion(this)">üòê</span>
                    <span class="emotion" onclick="selectEmotion(this)">üôÇ</span>
                    <span class="emotion" onclick="selectEmotion(this)">üòä</span>
                    <span class="emotion" onclick="selectEmotion(this)">üòÑ</span>
                </div>
            </div>
            <div class="form-group">
                <label for="review">Your Review</label>
                <textarea id="review" rows="4" placeholder="Tell us what you think..."></textarea>
            </div>
            <button class="next-btn" onclick="nextCard(2)">Continue ‚Üí</button>
        </div>

        <!-- Card 3: Additional Feedback -->
        <div class="card hidden" id="card3">
            <div class="progress-bar">
                <div class="progress-dot"></div>
                <div class="progress-dot"></div>
                <div class="progress-dot active"></div>
            </div>
            <h1>Additional Feedback</h1>
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" placeholder="What's this about?">
            </div>
            <div class="form-group">
                <label for="message">Additional Comments</label>
                <textarea id="message" rows="5" placeholder="Any other thoughts you'd like to share..."></textarea>
            </div>
            <button class="next-btn" onclick="showThankYou()">Submit Feedback</button>
        </div>

        <!-- Thank You Card -->
        <div class="card thank-you" id="thankYouCard">
            <div class="thank-you-icon"></div>
            <h2>Thank You!</h2>
            <p>Your feedback is valuable to us. We appreciate you taking the time to share your thoughts!</p>
        </div>
    </div>

    <script>
        function nextCard(currentCard) {
            const current = document.getElementById(`card${currentCard}`);
            const next = document.getElementById(`card${currentCard + 1}`);
            
            current.classList.add('hidden');
            setTimeout(() => {
                next.classList.remove('hidden');
            }, 300);
        }

        function rate(star, value) {
            const stars = star.parentElement.children;
            for(let i = 0; i < stars.length; i++) {
                stars[i].classList.toggle('active', i < value);
            }
        }

        function selectEmotion(emotion) {
            const emotions = document.querySelectorAll('.emotion');
            emotions.forEach(e => e.classList.remove('selected'));
            emotion.classList.add('selected');
        }

        function showThankYou() {
            const card3 = document.getElementById('card3');
            const thankYouCard = document.getElementById('thankYouCard');
            
            card3.classList.add('hidden');
            setTimeout(() => {
                thankYouCard.classList.add('show');
            }, 300);
        }
    </script>
</body>
</html>
